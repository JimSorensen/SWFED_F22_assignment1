<Window x:Class="the_debt_book.Views.AddDebtorsWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:the_debt_book.Views"
        mc:Ignorable="d"
        Title="AddDebtorsWin" Height="275" Width="250">
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="20"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="35"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        
        <TextBlock Text="Add Deptor" 
                   Grid.Row="0" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Margin="0,0,0,0">
		</TextBlock>

		<TextBox Text="Name" 
                 FontSize="18" 
                 VerticalAlignment="Center" 
                 Width="101" 
                 Height="31" 
                 Margin="18,74,0,0" 
                 Grid.RowSpan="2"/>

		<TextBox Text="Initial Value" 
                 Grid.Row="2" 
                 FontSize="18" 
                 VerticalAlignment="Top" 
                 Margin="18,10,0,0" 
                 Grid.RowSpan="2" 
                 Width="127"/>

		<Button Grid.Row="3" 
                HorizontalAlignment="Left"
                Name="saveButton">
			Save
		</Button>

		<Button Grid.Row="3"
                HorizontalAlignment="Right"
                Name="cancelButton" 
                IsEnabled="True"
                RenderTransformOrigin="0.471,1.182" 
                Click="CancelBtnClick">
			    Cancel
		</Button>

	</Grid>
</Window>
