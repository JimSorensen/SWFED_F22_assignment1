<Window x:Class="the_debt_book.Views.AddDebtorsWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:the_debt_book.Views"
        mc:Ignorable="d"
        Title="AddDebtorsWin" Height="239" Width="169">

	<Grid Margin="0,0,0,18">
		<Grid.RowDefinitions>
			<RowDefinition Height="80" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="80" />
		</Grid.RowDefinitions>

		<TextBlock FontSize="22" 
                   FontWeight="Bold" 
                   Text="Add Deptor" 
                   Grid.Row="0" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Margin="0,0,0,0">
		</TextBlock>

		<TextBox Text="Name" 
                 FontSize="18" 
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Top" Width="101" Height="31" Margin="18,74,0,0" Grid.RowSpan="2"/>

		<TextBox Text="Initial Value" 
                 Grid.Row="2" 
                 FontSize="18" 
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Top" Margin="18,10,0,0" Grid.RowSpan="2" Width="127"/>

		<Button Grid.Row="3" 
                Width="70" 
                HorizontalAlignment="Left" 
                Margin="10,54,0,4" 
                Name="saveButton">
			Save
		</Button>

		<Button Grid.Row="3" 
                Width="68" 
                HorizontalAlignment="Right" 
                Margin="0,54,19,0" 
                Name="cancelButton" IsEnabled="True" Height="22" VerticalAlignment="Top" RenderTransformOrigin="0.471,1.182" Click="CancelBtnClick">
			Cancel
		</Button>

	</Grid>
</Window>
